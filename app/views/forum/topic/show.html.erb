<div class="forum topics container">
  <h1>Topics</h1>
  <%= link_to "Create",  new_topic_path(@forum) %>
  <% if @topics.empty? %>
    <p>No topics to display</p>
  <% else %>
    <% @topics.each do |t| %>
      <h5 class="title"><%= link_to t.title, post_path(t) %></h5>
      <p class="username">Created by <%= User.find( t.creator_id ).displayname %></p>
      <p class="post_num"># of Posts: <%= t.posts.size %></p>
      <p class="last_updated">Last updated <%= t.updated_at.strftime("%m/%d/%y at %I:%M %p") %></p>

      <% if t.creator_id == current_user.id or current_user.admin %>
        <%= link_to "Delete", destroy_topic_path(t), method: :delete %>
        <%= link_to "Edit", edit_topic_path(t), method: :get %>
      <% end %>

    <% end %>
  <% end %>

  <br />
  <%= link_to "Back to Forum", forum_path %>
</div>
