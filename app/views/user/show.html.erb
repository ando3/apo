<div class="container">
	<div class="cover">
		<div class="profile">
			<div class="pf-pic"><%= image_tag "astro-pf.png" %></div>
			<div><%= @user.displayname %></div> <span><%= @user.pledge_class %> <%= "(Eboard)" if @user.admin? %></span>
		</div>
	</div>
	<div class="card-panel undercover">
		<span>
			Membership: <%= @user.membership_status %>.
			Joined <%= @user.created_at.strftime("%b %d, %Y") %>.
		</span>
		<%= link_to update_user_path(@user) do %>
			<div class="btn yellow darken-2">
				Edit Profile
			</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col l4">
			<div class="card-panel">
				<h5>Requirements</h5>
				<%= @hours %> service hours completed.<br />
				<%= pluralize @fellowships, "fellowship" %> attended.
			</div>
		</div>
		<div class="col l4">
			<div class="card-panel">
    		<h5>My Upcoming Events</h5>
    		<% events = @user.attending_events.where('end_time >= ?', Time.now) %>
    		<% if events.empty? %>
					<div class="no-participants">
						No events.
					</div>
    		<% else %>
    			<% events.each do |e| %>
						<%= link_to e.title, event_path(e) %><br />
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="col l4">
			<div class="card-panel">
    		<h5>Attended Events</h5>
    		<% events = @user.attendances.where(attended: true) %>
    		<% if events.empty? %>
					<div class="no-participants">
						No events.
					</div>
    		<% else %>
	    		<% events.each do |a| %>
    				<% e = Event.find(a.event_id) %>
						<%= link_to e.title, event_path(e) %><br />
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
